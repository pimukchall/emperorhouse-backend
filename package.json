    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "helmet": "^0.14.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "pdf-lib": "^1.17.1",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
